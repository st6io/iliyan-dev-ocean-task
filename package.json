  "dependencies": {
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.3.0",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "27.5.2",
    "@types/node": "16.11.43",
    "@types/react": "18.0.0",
    "@types/react-dom": "18.0.0",
    "@xstyled/styled-components": "3.6.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-scripts": "5.0.1",
    "styled-components": "5.3.5",
    "typescript": "4.7.4"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "eslint-config-prettier": "8.5.0",
    "prettier": "2.7.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
